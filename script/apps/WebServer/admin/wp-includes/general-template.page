-- Display information about the blog.
function bloginfo(show)
	local output;
	if(show == "url") then
		output = home_url();
	elseif(show == "description") then
		output = get_option('sitedescription');
	elseif(show == "version") then
		output = wp_version;
	elseif(show == "language") then
		output = "zh-CN";
	else
		output = get_option('sitename');
	end
	echo(output);
end

